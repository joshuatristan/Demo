<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/CSS/_Layout.css")" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Duke Inventory System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <img class="brandImage" src="~/Resources/Image/177-1776620_duke-manufacturing-logo.png" />
            </div>
            @if (Session["UserName"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="navItems">@Html.ActionLink("Users", "Users", "Users")</li>
                        <li class="navItems">@Html.ActionLink("Equipment", "Inventory", "Inventory")</li>
                    </ul>
                    <ul class="nav navbar-nav logOut">
                        <li class="navItems">@Html.ActionLink("Logout","Logout", "Home")</li>
                    </ul>
                </div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer class="footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - Duke Software Development</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
